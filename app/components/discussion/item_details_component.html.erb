<div
  id="<%= dom_id(@discussion) %>"
  class="sm:p-4 sm:rounded-lg sm:shadow-sm sm:shadow-blue-50 sm:border sm:border-blue-50"
>
  <div id="<%= dom_id(@discussion, :metadata) %>" class="flex flex-wrap justify-between items-center mb-2 sm:mb-4">
    <% metadata.each do |metadatum| %>
      <%= metadatum %>
    <% end %>
  </div>

  <%= header %>

  <%= description %>

  <% if @view == :show %>
    <div id="<%= dom_id(@discussion, :actions) %>" class="inline-flex gap-x-1 -ml-2">
      <% actions.each do |action| %>
        <%= action %>
      <% end %>
    </div>
  <% end %>
</div>
