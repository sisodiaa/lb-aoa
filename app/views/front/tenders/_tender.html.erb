<div class="tender">
  <div class="h-full sm:rounded-lg sm:py-4 sm:px-6 sm:shadow bg-white">
    <h1 class="mb-1 font-medium text-xl md:text-2xl">
      <%= tender.title %>
    </h1>

    <h2 class="font-mono text-xs lg:text-sm mb-1 xl:mb-2 text-zinc-500">
      <%= tender.reference_token %>
    </h2>

    <div class="inline-flex items-center justify-center text-slate-400 mb-1">
      <svg
        class="w-3 h-3 fill-[none] stroke-current stroke-2"
        stroke-linecap="round"
        stroke-linejoin="round">
        <use href="/assets/feather-sprite.svg#calendar" />
      </svg>

      <span class="inline-block mx-2 text-xs">
        <%= tender.published_at.strftime("%d %b %Y") %>
      </span>
    </div>

    <div class="flex items-center text-slate-400 mb-1">
      <svg
        class="w-3 h-3 fill-[none] stroke-current stroke-2 mr-2"
        stroke-linecap="round"
        stroke-linejoin="round">
        <use href="/assets/feather-sprite.svg#clock" />
      </svg>

      <time class="block pt-0.5 lg:pt-0 text-xs font-normal leading-none">
        <%= tender.opens_on.strftime("%d %b %Y, %H:%M") %>
      </time>

      <span class="inline-flex items-center justify-center mx-1">
        &dash;
      </span>

      <time class="block pt-0.5 lg:pt-0 text-xs font-normal leading-none">
        <%= tender.closes_on.strftime("%d %b %Y, %H:%M") %>
      </time>
    </div>

    <p class="font-light text-sm lg:text-base text-slate-500 mb-1">
      <%= truncate(strip_tags(tender.description.to_s), length: 175) %>
    </p>

    <%= link_to(
      tender_path(tender),
      class: "inline-flex items-center justify-center text-lb-100",
      data: { turbo_frame: "main", turbo_action: "advance" }
    ) do %>
      <span class="inline-block mr-1 text-xs lg:text-sm">
        View more
      </span>

      <svg
        class="w-3 h-3 fill-[none] stroke-current stroke-2"
        stroke-linecap="round"
        stroke-linejoin="round">
        <use href="/assets/feather-sprite.svg#chevrons-right" />
      </svg>
    <% end %>
  </div>
</div>
