<div
  class="max-w-fit"
  data-controller="flowbite--dropdown"
  data-action="click@window->flowbite--dropdown#hide"
  data-flowbite--dropdown-target="dropdown">
  <button
    id="tenderDropdownButton"
    data-action="click->flowbite--dropdown#toggle"
    class="text-white bg-gradient-to-r from-lb-300 via-lb-400 to-lb-500
          hover:from-lb-400 hover:via-lb-500 hover:to-lb-600
          focus:ring-4 focus:ring-lb-200 font-medium rounded-lg text-sm px-4 
          py-2.5 text-center w-full mb-4 inline-flex items-center justify-center 
          lg:justify-start lg:max-w-max"
    type="button">
    List Tenders by Status
    <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" 
      xmlns="http://www.w3.org/2000/svg">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7">
      </path>
    </svg>
  </button>

  <div
    id="tenderDropdown"
    class="hidden z-10 w-44 text-base list-none bg-white rounded divide-y divide-gray-100 shadow"
    data-flowbite--dropdown-target="menu">
    <ul class="py-1" aria-labelledby="tenderDropdownButton">
      <li>
        <%= link_to(
          upcoming_tenders_path,
          data: { turbo_action: "advance", turbo_frame: "tenders" },
          class: "flex justify-between py-2 px-4 text-sm text-gray-700 hover:bg-gray-100"
        ) do %>
          Upcoming
          <% if status == "upcoming" %>
            <svg
                class="w-5 h-5 fill-[none] stroke-current stroke-2 mx-2"
                stroke-linecap="round"
                stroke-linejoin="round">
              <%= svg_icon("feather-sprite.svg", "check") %>
            </svg>
          <% end %>
        <% end %>
      </li>

      <li>
        <%= link_to(
          current_tenders_path,
          data: { turbo_action: "advance", turbo_frame: "tenders" },
          class: "flex justify-between py-2 px-4 text-sm text-gray-700 hover:bg-gray-100"
        ) do %>
          Current
          <% if status == "current" %>
            <svg
                class="w-5 h-5 fill-[none] stroke-current stroke-2 mx-2"
                stroke-linecap="round"
                stroke-linejoin="round">
              <%= svg_icon("feather-sprite.svg", "check") %>
            </svg>
          <% end %>
        <% end %>
      </li>

      <li>
        <%= link_to(
          under_review_tenders_path,
          data: { turbo_action: "advance", turbo_frame: "tenders" },
          class: "flex justify-between py-2 px-4 text-sm text-gray-700 hover:bg-gray-100"
        ) do %>
          Under Review
          <% if status == "under_review" %>
            <svg
                class="w-5 h-5 fill-[none] stroke-current stroke-2 mx-2"
                stroke-linecap="round"
                stroke-linejoin="round">
              <%= svg_icon("feather-sprite.svg", "check") %>
            </svg>
          <% end %>
        <% end %>
      </li>

      <li>
        <%= link_to(
          reviewed_tenders_path,
          data: { turbo_action: "advance", turbo_frame: "tenders" },
          class: "flex justify-between py-2 px-4 text-sm text-gray-700 hover:bg-gray-100"
        ) do %>
          Reviewed
          <% if status == "reviewed" %>
            <svg
              class="w-5 h-5 fill-[none] stroke-current stroke-2 mx-2"
              stroke-linecap="round"
              stroke-linejoin="round">
              <%= svg_icon("feather-sprite.svg", "check") %>
            </svg>
          <% end %>
        <% end %>
      </li>
    </ul>
  </div>
</div>
