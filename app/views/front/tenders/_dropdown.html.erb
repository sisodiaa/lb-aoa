<button
  id="tenderDropdownButton"
  data-dropdown-toggle="tenderDropdown"
  data-controller="dropdown"
  class="text-white bg-gradient-to-r from-purple-500 via-purple-600 to-purple-700
        hover:from-purple-600 hover:via-purple-700 hover:to-purple-800
        focus:ring-4 focus:ring-purple-300 font-medium rounded-lg text-sm px-4 
        py-2.5 text-center w-full mb-4 inline-flex items-center justify-center 
        lg:justify-start lg:max-w-max"
  type="button">
  List Tenders by Status
  <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" 
    xmlns="http://www.w3.org/2000/svg">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7">
    </path>
  </svg>
</button>

<div
  id="tenderDropdown"
  class="hidden z-10 w-44 text-base list-none bg-white rounded divide-y divide-gray-100 shadow">
  <ul class="py-1" aria-labelledby="tenderDropdownButton">
    <li>
      <%= link_to(
        "Upcoming",
        upcoming_tenders_path,
        data: { turbo_action: "advance", turbo_frame: "tenders" },
        class: "block py-2 px-4 text-sm text-gray-700 hover:bg-gray-100"
      )%>
    </li>

    <li>
      <%= link_to(
        "Current",
        current_tenders_path,
        data: { turbo_action: "advance", turbo_frame: "tenders" },
        class: "block py-2 px-4 text-sm text-gray-700 hover:bg-gray-100"
      )%>
    </li>

    <li>
      <%= link_to(
        "Under Review",
        under_review_tenders_path,
        data: { turbo_action: "advance", turbo_frame: "tenders" },
        class: "block py-2 px-4 text-sm text-gray-700 hover:bg-gray-100"
      )%>
    </li>

    <li>
      <%= link_to(
        "Reviewed",
        reviewed_tenders_path,
        data: { turbo_action: "advance", turbo_frame: "tenders" },
        class: "block py-2 px-4 text-sm text-gray-700 hover:bg-gray-100"
      )%>
    </li>
  </ul>
</div>
