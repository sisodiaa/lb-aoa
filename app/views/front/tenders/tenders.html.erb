<%= turbo_frame_tag "#{@status}_tenders" do %>
  <%= render partial: "tender", collection: @tenders %>

  <br class="hidden lg:block">
  
  <% if @status == "upcoming" %>
    <%= render(
      partial: "shared/navigation_controls",
      locals: {
        frame: "tenders",
        pagy: @pagy,
        prev_path: @pagy.prev ? upcoming_tenders_path(page: @pagy.prev) : "#",
        next_path: @pagy.next ? upcoming_tenders_path(page: @pagy.next) : "#"
      }
    )%>
  <% end %>
  
  <% if @status == "current" %>
    <%= render(
      partial: "shared/navigation_controls",
      locals: {
        frame: "tenders",
        pagy: @pagy,
        prev_path: @pagy.prev ? current_tenders_path(page: @pagy.prev) : "#",
        next_path: @pagy.next ? current_tenders_path(page: @pagy.next) : "#"
      }
    )%>
  <% end %>
<% end %>
