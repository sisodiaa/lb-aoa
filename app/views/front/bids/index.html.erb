<div class="mx-auto mb-8 px-6 w-full sm:px-16 lg:w-3/4 xl:w-7/12">
  <h1 class="text-2xl lg:text-3xl xl:text-4xl mb-4 text-zinc-900">
    Bids submitted for <%= @tender.reference_token %>
  </h1>

  <%= turbo_frame_tag "tender-bids" do %>
    <ul class="py-1" aria-labelledby="bidDropdownButton">
      <% @bids.each do |bid| %>
        <li class="tender-bid py-2 px-4 text-sm text-gray-700 hover:bg-gray-100">
          <%= link_to(
            "#{bid.name} - #{bid.quotation_token}",
            tender_bid_path(@tender, bid),
            data: { turbo_frame: "bid" }
          )%>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
