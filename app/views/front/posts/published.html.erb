<%= turbo_frame_tag :published_posts do %>
  <%= render partial: "post", collection: @posts %>

  <br class="hidden lg:block">
  
  <%= render(
    partial: "shared/navigation_controls",
    locals: {
      frame: "posts",
      pagy: @pagy,
      prev_path: @pagy.prev ? posts_path(page: @pagy.prev) : "#",
      next_path: @pagy.next ? posts_path(page: @pagy.next) : "#"
    }
  )%>
<% end %>
