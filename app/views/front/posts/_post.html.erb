<div class="post">
  <div class="h-full sm:rounded-lg sm:py-4 sm:px-6 sm:shadow bg-white">
    <% if post.members? %>
      <div class="mb-2">
        <div class="visibility-status inline-flex items-center justify-center py-px px-2 rounded-lg
                    text-white bg-blue-600">
          <span class="text-xs capitalize">
            Members Only
          </span>
        </div>
      </div>
    <% end %>

    <h1 class="mb-1 text-blue-800 font-serif font-medium text-xl md:text-2xl">
      <%= post.title %>
    </h1>

    <div class="mb-2 inline-flex items-center justify-center py-1 text-blue-600">
      <svg
        class="w-3 h-3 fill-[none] stroke-current stroke-2"
        stroke-linecap="round"
        stroke-linejoin="round">
        <%= svg_icon("feather-sprite.svg", "folder") %>
      </svg>

      <span class="inline-block mx-2 text-xs capitalize">
        <%= post.category.name %>
      </span>
    </div>

    <div class="mb-2 inline-flex items-center justify-center py-1 text-blue-600">
      <svg
        class="w-3 h-3 fill-[none] stroke-current stroke-2"
        stroke-linecap="round"
        stroke-linejoin="round">
        <%= svg_icon("feather-sprite.svg", "calendar") %>
      </svg>

      <span class="inline-block mx-2 text-xs">
        <%= post.published_at.strftime("%d %B %Y") %>
      </span>
    </div>

    <p class="font-light text-sm lg:text-base text-neutral-700 mb-1">
      <%= truncate(strip_tags(post.content.to_s), length: 175) %>
    </p>

    <%= link_to(
      post_path(post),
      class: "inline-flex items-center justify-center text-lb-100",
      data: { turbo_frame: frame, turbo_action: "advance" }
    ) do %>
      <span class="inline-block mr-1 text-xs lg:text-sm">
        Read more
      </span>

      <svg
        class="w-3 h-3 fill-[none] stroke-current stroke-2"
        stroke-linecap="round"
        stroke-linejoin="round">
        <%= svg_icon("feather-sprite.svg", "chevrons-right") %>
      </svg>
    <% end %>
  </div>
</div>
