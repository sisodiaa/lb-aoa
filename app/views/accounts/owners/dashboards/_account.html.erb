<div id="dashboard-account" class="overflow-x-auto relative">
  <table class="w-full">
    <tbody>
      <tr class="border-b">
        <th scope="row" class="py-4 px-6 whitespace-nowrap capitalize font-normal">
          e-mail address
        </th>
        <td class="py-4 px-6 font-medium text-gray-900 break-all">
          <%= current_owner.email %>
        </td>
      </tr>

      <tr class="border-b">
        <th scope="row" class="py-4 px-6 whitespace-nowrap capitalize font-normal">
          Account Status
        </th>
        <td class="py-4 px-6 font-medium text-gray-900">
          <span class="capitalize"><%= current_owner.account_status %></span>
          <% if current_owner.linked? %>
            with <%= current_owner.properties.count %> property
            <%= "record".pluralize(current_owner.properties.count) %>
          <% end %>
        </td>
      </tr>

      <tr>
        <th scope="row" class="py-4 px-6" colspan="2">
          <%= link_to(
            "Edit Account",
            edit_owner_registration_path,
            class: "btn btn--small btn--primary w-full"
          )%>
        </th>
      </tr>
    </tbody>
  </table>
</div>
