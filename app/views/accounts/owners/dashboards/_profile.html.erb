<div id="dashboard-profile" class="overflow-x-auto relative">
  <table class="w-full break-all">
    <tbody>
      <tr class="border-b">
        <th scope="row" class="py-4 px-6 whitespace-nowrap capitalize font-normal">
          First Name
        </th>
        <td class="py-4 px-6 font-medium text-gray-900">
          <%= profile.first_name %>
        </td>
      </tr>

      <tr class="border-b">
        <th scope="row" class="py-4 px-6 whitespace-nowrap capitalize font-normal">
          Middle Name
        </th>
        <td class="py-4 px-6 font-medium text-gray-900">
          <%= profile.middle_name || "NA" %>
        </td>
      </tr>

      <tr class="border-b">
        <th scope="row" class="py-4 px-6 whitespace-nowrap capitalize font-normal">
          Last Name
        </th>
        <td class="py-4 px-6 font-medium text-gray-900">
          <%= profile.last_name %>
        </td>
      </tr>

      <tr class="border-b">
        <th scope="row" class="py-4 px-6 whitespace-nowrap capitalize font-normal">
          Phone Number
        </th>
        <td class="py-4 px-6 font-medium text-gray-900">
          <%= profile.phone_number || "NA" %>
        </td>
      </tr>

      <tr>
        <th scope="row" class="py-4 px-6" colspan="2">
          <%= render(Link::DefaultButtonComponent.new(
            href: edit_owners_profile_path,
            size: :small
          )) do |c| %>
            <% c.with_text.with_content("Edit Profile") %>

            <% c.with_icon do %>
              <%= render(Icon::Outline::UserCircleComponent.new(
                classes: "w-4 h-4"
              )) %>
            <% end %>
          <% end %>
        </th>
      </tr>
    </tbody>
  </table>
</div>
