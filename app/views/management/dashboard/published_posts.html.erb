<%= turbo_frame_tag :published_posts do %>
  <%= render partial: "published_post", collection: @posts, as: :post %>

  <%= render(
    partial: "post_navigation_controls",
    locals: {
      pagy: @pagy,
      prev_posts: @pagy.prev ? management_published_posts_path(page: @pagy.prev) : "#",
      next_posts: @pagy.next ? management_published_posts_path(page: @pagy.next) : "#",
      status: "published"
    }
  )%>
<% end %>
