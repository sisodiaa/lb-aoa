<%= turbo_frame_tag :drafts do %>
  <%= render partial: "draft", collection: @posts, as: :post %>

  <%= render(
    partial: "post_navigation_controls",
    locals: {
      pagy: @pagy,
      prev_posts: @pagy.prev ? management_drafts_path(page: @pagy.prev) : "#",
      next_posts: @pagy.next ? management_drafts_path(page: @pagy.next) : "#",
      status: "draft"
    }
  )%>
<% end %>
