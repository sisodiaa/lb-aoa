<%= turbo_frame_tag "main" do %>
  <div class="ml-16 mr-24">
    <div class="flex flex-wrap gap-8 mb-24">
      <div class="card flex-auto flex flex-col flex-wrap justify-start p-8
                  max-w-sm min-w-max w-1/3 bg-white rounded-lg border shadow-md">
        <h5 class="text-5xl font-extrabold text-gray-500">Post</h5>

        <ul role="list" class="my-7 space-y-5">
          <li class="flex">
            <span class="text-base font-normal leading-tight text-gray-500">
              <%= @drafts_count %> Drafts
            </span>
          </li>

          <li class="flex">
            <span class="text-base font-normal leading-tight text-gray-500">
              <%= @published_posts_count %> Published
            </span>
          </li>
        </ul>

        <%= link_to(
          "Create New Post",
          new_cms_post_path,
          data: { turbo_action: "advance", turbo_frame: "main" },
          class: "mt-auto btn btn--normal btn--primary w-full py-2.5"
        )%>
      </div>

      <div class="card flex-auto flex flex-col flex-wrap justify-start p-8
                  max-w-sm min-w-max w-1/3 bg-white rounded-lg border shadow-md">
        <h5 class="text-5xl font-extrabold text-gray-500">Category</h5>

        <ul role="list" class="my-7 space-y-5">
          <li class="flex">
            <span class="text-base font-normal leading-tight text-gray-500">
              <%= @categories_count %> Categories
            </span>
          </li>
        </ul>

        <%= link_to(
          "Create New Category",
          new_cms_category_path,
          data: { turbo_action: "advance", turbo_frame: "main" },
          class: "mt-auto btn btn--normal btn--primary w-full py-2.5"
        )%>
      </div>
    </div>
  </div>
<% end %>
