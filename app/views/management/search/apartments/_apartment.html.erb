<div
  id="<%= dom_id(apartment) %>"
  class="apartment p-2 bg-white rounded-lg shadow border-b border-b-fuchsia-50">
  <h3 class="text-sm text-gray-400">Apartment</h3>
  <h1 class="text-base text-gray-800">
    <%= apartment.tower_number %> / <%= apartment.flat_number %>
  </h1>
  
  <h3 class="mt-2 text-sm text-gray-400">Membership Info</h3>
  <div class="flex justify-between items-center">
    <p class="text-sm text-gray-800">
      <%= apartment.properties.count %> record(s) linked
    </p>
    <%= link_to(
      "View linked memberships", 
      management_apartments_memberships_path(apartment),
      data: { turbo_action: "advance" },
      class: "py-1 px-3 text-xs font-medium text-gray-600
      bg-white rounded-md border border-gray-200
      hover:bg-gray-100 hover:text-lb-500 focus:z-10
      focus:ring-2 focus:ring-lb-500 focus:text-lb-500"
    )%>
  </div>
</div>
