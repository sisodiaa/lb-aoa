<div
    id="<%= dom_id(tender) %>"
    class="tender p-2 bg-white rounded-lg shadow border-b border-b-fuchsia-50"
    data-dashboard--list-target="item">
  <h1 class="text-lg text-gray-800"><%= tender.title %></h1>

  <div class="flex justify-between mt-2">
    <div class="inline-flex rounded-md shadow-sm" role="group">
      <%= link_to(
        "Show", 
        tms_tender_path(tender),
        data: {
          turbo_frame: "main",
          turbo_action: "advance"
        },
        class: "py-1 px-3 text-xs font-medium text-gray-600
                bg-white border border-gray-200
                hover:bg-gray-100 hover:text-lb-500 focus:z-10
                focus:ring-2 focus:ring-lb-500 focus:text-lb-500
                #{tender.draft? ? 'rounded-l-md' : 'rounded-md'}"
      )%>
      <% if tender.draft? %>
        <%= link_to(
          "Delete", 
          tms_tender_path(tender),
          data: {
            turbo_method: :delete,
            turbo_confirm: 'Are you sure?',
            action: "click->dashboard--list#markItem"
          },
          class: "py-1 px-3 text-xs font-medium text-gray-600
                  bg-white rounded-r-md border border-l-0 border-gray-200
                  hover:bg-gray-100 hover:text-lb-500 focus:z-10
                  focus:ring-2 focus:ring-lb-500 focus:text-lb-500"
        )%>
      <% end %>
    </div>
  </div>
</div>
