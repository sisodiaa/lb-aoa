<%= form_for(
  selection,
  url: tms_tender_bid_selection_path(tender, bid),
  id: dom_id(selection),
  class: "w-full",
  data: { turbo_frame: "_top" }
) do |form| %>
  <% if selection.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-600 text-sm rounded-lg p-6 mb-6">
      <h2 class="font-medium mb-2">
        <%= pluralize(selection.errors.count, "error") %> prohibited this bid from being selected
      </h2>

      <ul role="list" class="list-inside list-disc">
        <% selection.errors.full_messages.each do |message| %>
          <li class="font-light"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-6">
    <%= form.label(
      :reason,
      "Reason for selecting this bid",
      class: "block mb-2 text-sm font-medium text-gray-900"
    )%>

    <%= form.text_area(
      :reason,
      rows: 3,
      class: "border border-gray-300 text-gray-900 text-sm p-2.5 block w-full
              rounded-lg focus:ring-blue-500 focus:border-blue-500"
    )%>
  </div>

  <div class="mb-6">
    <%= form.submit(
      "Select this bid",
      class: "block btn btn--normal btn--success"
    )%>
  </div>
<% end %>
