<%= form_with(
  model: [:cms, post],
  id: dom_id(post),
  class: "lg:w-1/2 p-5 rounded border border-slate-200 bg-fuchsia-50"
) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-600 text-sm rounded-lg p-6 mb-6">
      <h2 class="font-medium mb-2">
        <%= pluralize(post.errors.count, "error") %> prohibited this post from being saved
      </h2>

      <ul role="list" class="list-inside list-disc">
        <% post.errors.full_messages.each do |message| %>
          <li class="font-light"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-6">
    <%= form.label(
      :title,
      class: "block mb-2 text-sm font-medium text-gray-900"
    )%>

    <%= form.text_field(
      :title,
      class: "border border-gray-300 text-gray-900 text-sm p-2.5 block w-full
              rounded-lg focus:ring-blue-500 focus:border-blue-500"
    )%>
  </div>

  <div class="mb-6">
    <%= form.label(
      :content,
      class: "block mb-2 text-sm font-medium text-gray-900"
    )%>

    <%= form.rich_text_area(:content) %>
  </div>

  <div class="mb-6">
    <%= form.submit(
      class: "btn btn--normal btn--primary"
    )%>
  </div>
<% end %>
