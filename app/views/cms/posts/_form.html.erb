<%= form_with(
  model: [:cms, post],
  class: "w-1/2 p-5 rounded border border-slate-200 bg-fuchsia-50"
) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-600 rounded-lg p-6 mb-6">
      <h2 class="font-medium mb-2">
        <%= pluralize(post.errors.count, "error") %> prohibited this post from being saved
      </h2>

      <ul role="list" class="list-inside list-disc">
        <% post.errors.full_messages.each do |message| %>
          <li class="font-light"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-6">
    <%= form.label(
      :title,
      class: "block mb-2 text-sm font-medium text-gray-900"
    )%>

    <%= form.text_field(
      :title,
      class: "border border-gray-300 text-gray-900 text-sm p-2.5 block w-full
              rounded-lg focus:ring-blue-500 focus:border-blue-500"
    )%>
  </div>

  <div class="mb-6">
    <%= form.label(
      :content,
      class: "block mb-2 text-sm font-medium text-gray-900"
    )%>

    <%= form.rich_text_area(:content) %>
  </div>

  <div class="mb-6">
    <%= form.submit(
      class: "text-white bg-gradient-to-r from-fuchsia-600 via-fuchsia-700
              to-fuchsia-800 hover:from-fuchsia-700 hover:via-fuchsia-800
              hover:to-fuchsia-900 focus:ring focus:ring-offset-1
              focus:ring-fuchsia-400 font-medium rounded-lg text-sm px-5 py-2.5
              text-center mr-2 mb-2"
    )%>
  </div>
<% end %>
