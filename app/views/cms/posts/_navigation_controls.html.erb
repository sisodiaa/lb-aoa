<div class="flex justify-between w-full pb-4">
  <%= link_to(
    prev_path,
    class: "w-32 inline-flex items-center justify-center py-1 px-4 text-xs
            font-medium rounded-lg border text-indigo-500 bg-transparent
            border-indigo-300 hover:bg-indigo-500 hover:text-indigo-100
            #{ pagy.prev ? '' : 'pointer-events-none' }"
  ) do %>
    <svg
      class="w-4 h-4 fill-[none] stroke-current stroke-2 mr-2"
      stroke-linecap="round"
      stroke-linejoin="round">
      <use href="/assets/feather-sprite.svg#arrow-left" />
    </svg>

    Previous
  <% end %>

  <p class="py-1 text-xs font-medium text-indigo-500">
    <%= pagy.from %> to <%= pagy.to %> of <%= pagy.count %> <%= status %>
  </p>

  <%= link_to(
    next_path,
    class: "w-32 inline-flex items-center justify-center py-1 px-4 text-xs
            font-medium rounded-lg border text-indigo-500 bg-transparent
            border-indigo-300 hover:bg-indigo-500 hover:text-indigo-100
            #{ pagy.next ? '' : 'pointer-events-none' }"
  ) do %>
    Next

    <svg
      class="w-4 h-4 fill-[none] stroke-current stroke-2 ml-2"
      stroke-linecap="round"
      stroke-linejoin="round">
      <use href="/assets/feather-sprite.svg#arrow-right" />
    </svg>
  <% end %>
</div>
